<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
<suite name="Selenium_Test_Suite" configfailurepolicy="continue"
       parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="listeners.MethodListener"></listener>
    </listeners>

    <!-- For browser specify browser value like firefox, chrome, chrome_headless, ie and edge -->
    <!-- For platform specify platform value like windows, linux, mac etc -->

    <!-- Tests executed on Chrome browser -->
    <test name="First_Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="platform" value="windows"/>

        <classes>
            <class name="tests.GoogleTests"/>
        </classes>
    </test>
</suite>
